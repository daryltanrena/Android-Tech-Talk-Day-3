<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="innovations.voyager.techtalkday3" >

    <uses-permission  android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.PickerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.BoundServiceActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.UnboundServiceActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.WebRequestActivity"
                  android:label="@string/app_name">
        </activity>
        <service android:name=".services.WebRequestIntentService"/>
        <service android:name=".services.SoundBoundService"/>
        <service android:name=".services.SoundUnboundService"/>
    </application>

</manifest>
